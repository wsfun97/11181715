<html>
    <head> 
        <title>Google Map</title>
		<link rel="stylesheet" type="text/css" href="layout.css">
	<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true&key= AIzaSyCZr2n8Pga9csRTUCior5_AGL2rcatnVHY"></script>
	<script type="text/javascript">
            var loadMap = function() 
            {
				var myLatLng = {lat: <%=restaurant.lat%>, lng: <%=restaurant.lon%>};
                var map = new google.maps.Map(document.getElementById("map"),{
				      zoom: 18,
				      center: myLatLng
				}); 
				var map = new google.maps.Marker({
					position: myLatLng,
					map: map,
					title: '<%=restaurant.name%>'
				});
            };
            window.onload= loadMap;
	</script>
    </head>
    <body>
			<aside>
        	<div id="map" style="width:500px;height:500px;">
			</aside>
    </body>
</html>
